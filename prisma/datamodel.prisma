type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  posts: [Post!]!
  comments: [Comment!]!
}

type Post {
  id: ID! @id
  title: String!
  body: String!
  published: Boolean!
  author: User!
  comments: [Comment!]!
}

type Comment {
  id: ID! @id
  text: String!
  author: User!
  post: Post!
}